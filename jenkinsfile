pipeline {
    agent {
        docker {
            image 'ubuntu:22.04'}

    stages {
        stage('gitcheckoutrepo') {
            steps

                {
    checkout scmGit(branches: [[name: 'main']], extensions: [sparseCheckout([[path: 'peace.yaml']]), cleanBeforeCheckout(deleteUntrackedNestedRepositories: true)], userRemoteConfigs: [[url: 'https://github.com/Adebisea/github-action-tutorial']]) 
    }
    
    {
              sh "ls -la"
            }
        }
    }
}
